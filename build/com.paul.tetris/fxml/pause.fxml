<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:id="borderPane" stylesheets="@style.css" styleClass="region">
    <center>
        <VBox alignment="CENTER">
            <Button text="Resume" onAction="#handleResume" prefWidth="200"/>
            <Button text="Help" onAction="#handleHelp" prefWidth="200"/>
            <Button text="End Game" onAction="#handleEndGame" prefWidth="200"/>
        </VBox>
    </center>

</BorderPane>
