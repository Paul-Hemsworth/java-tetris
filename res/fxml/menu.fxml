<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css"
      fx:id="menuVBox" alignment="CENTER" fillWidth="false" styleClass="region">

    <Label text="Tetris" fx:id="titleLabel"/>
    <Button text="Play" fx:id="playButton" onAction="#handlePlay" defaultButton="true" styleClass="mainButton"/>
    <Button text="Help" fx:id="helpButton" onAction="#handleHelp" styleClass="mainButton"/>
    <Button text="Scores" fx:id="scoresButton" onAction="#handleScores" styleClass="mainButton"/>
    <Button text="Exit" fx:id="exitButton" onAction="#handleExit" cancelButton="true" styleClass="mainButton"/>
</VBox>
